<div class="container-fluid mt-5">
  <div class="row justify-content-center">
    <div class="col-11 col-md-6 col-lg-4 p-5 shadow-lg p-5 rounded bg-danger-subtle">
      <h2 class="text-center fw-bolder">{{task}}</h2>
      <form action="{{actionTask}}" method="post">
        <div class="form-group mb-4">
          <label for="inputUsername"><strong>Email address</strong></label>
          <input type="text" class="form-control bg-secondary-subtle" name="username" aria-describedby="usernameHelp"
            placeholder="Enter user name" required />
        </div>
        <div class="form-group mb-4">
          <label for="inputPassword"><strong>Password</strong></label>
          <input type="password" class="form-control bg-secondary-subtle" name="password" placeholder="Enter password"
            required />
        </div>

        <div class="form-check mb-4">
          <input type="checkbox" class="form-check-input" id="exampleCheck1" />
          <label class="form-check-label" for="exampleCheck1">Check me out</label>
        </div>
        <button type="submit" class="btn btn-primary">{{task}}</button>
      </form>

      <div class="row">
        <code>{{notify}}</code>
      </div>

      {{#if optionsRegister}}
      {{! Go to Sign up }}
      <div class="row">
        <p>
        <form action="/api/signup" method="get">
          <span class="mt-2">Need an account? </span>
          <input type="submit" class="fw-semibold mt-2 text-primary-emphasis rounded
                  bg-success-subtle" style="border: 0px; padding: 0px;" value="Sign up" />
        </form>
        </p>
      </div>
      {{else}}
      {{! Go to Sign in }}
      <div class="row">
        <p>
        <form action="/api/signin" method="get">
          <span class="mt-2">Have account? </span>
          <input type="submit" class="fw-semibold mt-2 text-primary-emphasis rounded
                        bg-success-subtle" style="border: 0px; padding: 0px;" value="Sign in" />
        </form>
        </p>
      </div>

      {{/if}}
    </div>
  </div>
</div>